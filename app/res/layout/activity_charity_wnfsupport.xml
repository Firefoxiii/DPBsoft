<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CharityWNFInfoActivity"  
    android:background="@color/main_blue">

    <Button
        android:id="@+id/btnSteun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/steun"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtvSteunWNF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtvSteun"
        android:layout_below="@+id/btnSteun"
        android:layout_marginTop="31dp"
        android:text="@string/wnf_steun"
        android:textColor="@color/main_white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtvDonate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtvSteunWNF"
        android:layout_below="@+id/txtvSteunWNF"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:text="@string/donate"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtvSteun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSteun"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginBottom="27dp"
        android:text="@string/charity_steun"
        android:textColor="@color/main_white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:text="@string/wnf_title"
        android:textColor="@color/main_white"
        android:textSize="25sp" />

</RelativeLayout>
